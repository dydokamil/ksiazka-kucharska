<p id="notice"><%= notice %></p>

<h1>Składniki</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th colspan="3">Opcje</th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= link_to 'Pokaż', ingredient %></td>
        <td><%= link_to 'Edytuj', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Usuń', ingredient, method: :delete, data: { confirm: 'Na pewno?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy składnik', new_ingredient_path %> |
<%= link_to 'Przepisy', recipes_path %>
