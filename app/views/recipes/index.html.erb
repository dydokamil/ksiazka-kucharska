<%= render 'home/header' %>

<p id="notice"><%= notice %></p>

<h1>Przepisy</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.description.first(30) %>...</td>
        <td><%= link_to 'Pokaż', recipe %></td>
        <td><%= link_to 'Edytuj', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Usuń', recipe, method: :delete, data: { confirm: 'Na pewno?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Kroki przepisów', recipe_steps_path %> |
<%= link_to 'Składniki', ingredients_path %> |
<%= link_to 'Nowy przepis', new_recipe_path %>
