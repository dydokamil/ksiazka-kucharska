<h1>Editing Recipe Step</h1>

<%= render 'form', recipe_step: @recipe_step %>

<h2>Ingredients</h2>
<table>
  <thead>
  <tr>
    <th>Amount</th>
    <th>Ingredient</th>
  </tr>
  </thead>

  <tbody>
  <% @ingredients.zip(@amounts).each do |ingredient, amount| %>
      <tr>
        <td><%= amount %></td>
        <td><%= ingredient.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Add ingredient', new_ingredient_path %><br>

<%= link_to 'Show', @recipe_step %> |
<%= link_to 'Back', recipe_steps_path %>
